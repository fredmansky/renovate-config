{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "enabledManagers": ["composer"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchManagers": ["composer"],
      "minimumReleaseAge": "1 day"
    },
    {
      "matchManagers": ["composer"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Composer minor and patch versions",
      "groupSlug": "composer-minor-patch",
      "enabled": true
    }
  ]
}
