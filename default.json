{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "enabledManagers": ["composer"],
  "packageRules": [
    {
      "matchManagers": ["composer"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "Update Craft packages",
      "matchManagers": ["composer"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchSourceUrls": [
        "https://github.com/craftcms/**"
      ],
      "enabled": true
    }
  ]
}
